<h2>Edit Your Quote</h2>
<% if @quote.errors.any? %>
  <% @quote.errors.full_messages.each do |message| %>
    <h3><%= message %></h3>
    <br>
  <% end %>
<% end %>
<%= form_with model: @quote do |f| %>
  <%= f.label 'Published:'%>
  <%= f.check_box :published %><br><br>
  <%= f.label :author %><br>
  <%= f.text_field :author%><br><br>
  <%= f.label :content %><br>
  <%= f.text_area :content %><br><br>
  <%= f.submit %>
<% end %>
