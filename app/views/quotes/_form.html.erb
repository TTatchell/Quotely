<% if @quote.errors.any? %>
  <% @quote.errors.full_messages.each do |message| %>
    <h3><%= message %></h3>
    <br>
  <% end %>
<% end %>
<%= form_with model: @quote do |f| %>
  <%= f.label :author %><br>
  <%= f.text_field :author%><br><br>
  <%= f.label :content %><br>
  <%= f.text_area :content , maxlength: :@char_limit %><br>
  <p>Character limit: <%= @maximum_length %></p>    
  <%= f.label 'I want this to be public:'%>
  <%= f.check_box :published %><br><br>
  <%= f.submit %>
<% end %>