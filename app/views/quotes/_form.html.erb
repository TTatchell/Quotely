<% if @quote.errors.any? %>
  <div class = 'error_div'>
    <% @quote.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  </div>
<% end %>
<%= form_with model: @quote do |f| %>
  <%= f.label :author %><br>
  <%= f.text_field :author%><br>
  <br>
  <%= f.label :content %><br>
  <%= f.text_area :content, cols: 30, rows: 10 %><br>
  <p>Character limit: <%= @maximum_length %></p>
  <%= f.label 'I want this to be public:'%>
  <%= f.check_box :published %><br>
  <br>
  <%= f.submit class: 'button' %>
<% end %>
