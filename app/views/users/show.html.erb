<%= stylesheet_link_tag "users.css" %>
<div class='profile_div'>
  <div class="profile_header">
    <h1><%= @user.first_name %>'s Profile</h1>
  </div>
  <div class='profile_content'>
    <h3>Name: <%= @user.full_name %></h3>
    <h3>Email: <%= @user.email %></h3>
    <h4>Number of Quotes: <%= @user.quotes.count %></h4>
    <h4>Number of Likes: <%= @user.likes.count %></h4>
  </div>
  <p><%= link_to "#{@user.first_name}'s Quotes", custom_user_quotes_url %></p>
  <p><%= link_to "#{@user.first_name}'s Liked Quotes", custom_user_likes_url%></p>
  <% if Current.user == @user %>
    <p><%= link_to 'Edit Password', :edit_password %></p>
    <%= button_to 'Logout', logout_path, method: :delete, class: 'button'%>
  <% end%>
</div>
